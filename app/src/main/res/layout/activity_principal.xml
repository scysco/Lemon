<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.scysco.lemon.viewmodel.PrincipalViewModel" />
    </data>

    <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/logos"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/lemon_logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/laviganh" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:background="#3B514A"
        android:gravity="bottom|center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/textsearch" />

        <ImageView
            android:id="@+id/btnHome"
            android:layout_width="141dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:foregroundGravity="center"
            android:minWidth="35dp"
            android:minHeight="35dp"
            android:onClick="showPnl"
            app:srcCompat="@drawable/rect" />

        <ImageView
            android:id="@+id/btnConfig"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:onClick="showPnl"
            app:srcCompat="@drawable/textajustes" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnlPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="actionTest"
            android:text="@{String.valueOf(viewmodel.tvTest)}"
            android:textSize="28sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnlHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/pnlHomeStore"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#E91E63"
            android:onClick="actionHomeButtons"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pnlHomeTasks"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#FFC107"
            android:onClick="actionHomeButtons"
            android:orientation="vertical"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/pnlHomeMessages"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3F51B5"
            android:onClick="actionHomeButtons"
            android:orientation="vertical"
            android:padding="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnlConfig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/pnlConfigFavorites"
            android:layout_width="match_parent"
            android:layout_height='@{viewmodel.pnlConfigFavorites_Height+"px"}'
            android:background="#E91E63"
            android:onClick="actionConfigButtons"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pnlConfigLocal"
            android:layout_width="match_parent"
            android:layout_height='@{viewmodel.pnlConfigLocal_Height+"px"}'
            android:background="#FFC107"
            android:onClick="actionConfigButtons"
            android:orientation="vertical"
            android:padding="10dp" />

        <LinearLayout
            android:id="@+id/pnlConfigSession"
            android:layout_width="match_parent"
            android:layout_height='@{viewmodel.pnlConfigSession_Height+"px"}'
            android:background="#3F51B5"
            android:onClick="actionConfigButtons"
            android:orientation="vertical"
            android:padding="10dp" />
    </LinearLayout>


</FrameLayout>
</layout>